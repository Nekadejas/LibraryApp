@model BookStore.ViewModels.BookFromViewModel
@{
    ViewBag.Title = "CustomerForm";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("CreateEdit", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(b => b.Name)
        @Html.TextBoxFor(b => b.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.ReleaseDate)
        @Html.TextBoxFor(b => b.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.GenreId)
        @Html.DropDownListFor(b => b.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Book Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Author)
        @Html.TextBoxFor(b => b.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Author)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Amount)
        @Html.TextBoxFor(b => b.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Amount)
    </div>
    <div>
        @Html.HiddenFor(b => b.Id)
        @Html.AntiForgeryToken()
    </div>
    <button class="btn-success">Submit</button>
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval");
}

