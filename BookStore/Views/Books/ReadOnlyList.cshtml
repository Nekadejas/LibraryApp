<h2>Books</h2>

<table id="books" class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>Name</th>
            <th>Genre</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
    {
    <script>
        $(document).ready(function () {
            var table = $("#books").DataTable({
                ajax: {
                    url: "/api/books",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "author"
                    }
                ]
            });
        });
    </script>
}

